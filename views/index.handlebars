<div class="container">
    <div class="row">
        <div class="col-lg-12" align="center">
            <img class="burgerimg" src="http://www.stickpng.com/assets/images/58824b33e81acb96424ffab9.png">
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12" align="center">
            <h1>Eat-Da-Burger!</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-sm" align="center">
            <form class="create-form">
                <div class="form-group">
                    <textarea class="form-control" id="enterBurger" rows="3"></textarea>
                </div>
                <button type="submit" class="eatBurger btn btn-primary">Submit</button>
                <div>
                    <p>Enter a burger you want to eat and click the 'Submit' button</p>
                </div>
            </form>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-lg-6" >
            <div class="card">
                <div class="card-body">
                    <row>
                        <h2>Undevoured Burgers</h2>
                        <p>Click Burger to devour!</p>
                    </row>
                    <row align="center">
                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}
                        <button type="button" record_number={{id}} class="notDevoured btn btn-warning">{{id}}.
                            {{burger_name}}</button>
                        <br>
                        <br>
                        {{/unless}}
                        {{/each}}
                    </ul>
                    </row>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <row>
                        <h2>Devoured Burgers</h2>
                        <p>See below for devoured burgers</p>
                    </row>
                    <row align="center">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <button type="button" record_number={{id}} class="Devoured btn btn-secondary">{{id}}.
                            {{burger_name}}</button>
                        <br>
                        <br>
                        {{/if}}
                        {{/each}}
                    </ul>
                    </row>
                </div>
            </div>
        </div>
    </div>
</div>
<br>
